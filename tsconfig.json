{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
        "*": ["*"]
    }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}